#!/bin/bash


set -e
set -x


function dev {
    pip install -e .
    gunicorn projects.app:app --bind 0.0.0.0:8000 --reload
}


function tests {
    pip install -e .
    pip install pytest
    pytest tests
}


function run {
    gunicorn projects.app:app --bind 0.0.0.0:8000
}


function main {
    case "$1" in
        dev )
            dev
            ;;
        tests )
            tests
            ;;
        run )
            run
            ;;
    esac
}


main $1
